@model List<TravelBookingSystem.Web.ViewModels.Destination.DestinationIndexViewModel>

@{
    ViewData["Title"] = "Destinations";
}

<h1>Destinations</h1>

<div class="row">
    @foreach (var destination in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@destination.ImageUrl" class="card-img-top" alt="@destination.Name" style="height: 200px; object-fit: cover;">

                <div class="card-body">
                    <h5 class="card-title">@destination.Name</h5>
                    <p class="card-text">@destination.Description</p>
                    <p>Located in: <strong>@destination.Country</strong></p>
                    <a asp-controller="Destination" asp-action="Details" asp-route-id="@destination.Id" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>